<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="343dp"
        android:layout_height="57dp"
        android:gravity="right"
        android:queryHint="Location Search"
        android:tooltipText="location search"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp" />

    <ImageView
        android:id="@+id/filter"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:src="@drawable/filter"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="47dp" />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/filter"
        app:layout_constraintBottom_toTopOf="@+id/interplanettary_RV"
        android:id="@+id/viewPager"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interplanettary_RV"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="126dp"></androidx.recyclerview.widget.RecyclerView>

